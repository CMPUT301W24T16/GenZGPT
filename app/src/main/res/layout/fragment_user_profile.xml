<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileFragment">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/profile_header"
        android:layout_width="wrap_content"
        android:layout_height="73dp"
        android:layout_above="@+id/user_profile"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/round_outline"
        android:ems="14"
        android:gravity="end|center"
        android:layout_centerHorizontal="true"
        android:text="*Profile Name*"
        android:textColor="@color/white"
        android:textSize="24sp"/>


    <EditText
        android:id="@+id/user_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_profile_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/round_outline"
        android:gravity="center_horizontal"
        android:text="User Profile\n\nFirst Name: *NAME*\nLast Name: *NAME*\n\nContact Info:\nPhone Number: 000-000-0000\nEmail: userperson@mailsite.com\n\nCurrent Theme:\n*THEME*\n\nGeolocation:\nOFF"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/edit_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="91dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="78dp"
        android:text="Edit User Profile"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/default_button"
        android:ems="14"
        app:backgroundTint="@null" />
</RelativeLayout>

</FrameLayout>
